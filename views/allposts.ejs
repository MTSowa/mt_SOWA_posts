<%- include('./partials/header'); %> 
    <div class="posts">
        <%  Post.forEach(post =>{ %> 
            <div class="postWrapper">
                <h2><%= post.title %> </h2>
                <p>
                    <%= post.content.substring(0, 99) + "..."%>
                     <a href="/posts/:<%= post.title %>">read more</a> 
                </p>
            </div>
            <hr>
        <%   }) %>
    </div>
